<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.server2.MyActivity"
    tools:ignore="MergeRootFrame" >

    <Button
        android:id="@+id/startsocket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startsocket"
        android:text="start server socket" />

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_margin="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="NO body"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#00CC00"
        android:textSize="30sp" />
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView" android:layout_gravity="center_horizontal" android:background="#ffffdb83"/>

</LinearLayout>

